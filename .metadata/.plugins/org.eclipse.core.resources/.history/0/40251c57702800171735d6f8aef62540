package Sokoban;

import java.awt.Graphics;

import Objects.Area;
import Objects.Player;

public class Sokoban extends GUI {
	
	private static final String PATH = "src/Images/";
	private int imageWidth = 35;
	private int imageHeight = 40;
	
	
	//Class Fields
	private Area area;
	//Ask for name later
	private Player p;
	
	
	public Sokoban(){}
	
	
	
	public void onMove(Move m){
		if(m==Move.LEFT){
			getTextOutputArea().setText("You Move Left\n");
			
		}
		if(m==Move.RIGHT){
			getTextOutputArea().setText("You Move Right\n");
			
		}
		if(m==Move.DOWN){
			getTextOutputArea().setText("You Move Down\n");
			
		}
		if(m==Move.UP){
			getTextOutputArea().setText("You Move Up\n");
			
		}
		if(m==Move.ZOOM_IN){
			getTextOutputArea().setText("You Zoom In\n");
			imageHeight++;
			
		}
		if(m==Move.ZOOM_OUT){
			getTextOutputArea().setText("You Zoom Out\n");
			imageWidth--;
			imageHeight--;
			
		}
		
	}
	
	
	
	public void redraw(Graphics g){
		//Draw The Area
		area.drawArea(g, drawing, PATH, imageHeight, imageWidth);
		p.drawChar(g, drawing, PATH);
		
	}
	
	public static void main(String[] args){
		// Choosing Floor Screen
		
		
		//Main
		new Sokoban();
	}

}
