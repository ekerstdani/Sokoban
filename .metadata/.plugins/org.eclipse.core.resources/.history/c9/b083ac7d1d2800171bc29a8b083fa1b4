package Sokoban;

import java.awt.Graphics;
import java.awt.image.BufferedImage;
import java.io.File;
import java.io.IOException;

import javax.imageio.ImageIO;
import javax.swing.JComponent;
import javax.xml.bind.annotation.adapters.XmlJavaTypeAdapter.DEFAULT;

public class Area{
	private static final String PATH = "src/Images/";
	
	
			
	public void drawArea(Graphics g, JComponent drawing){
		try {
			BufferedImage area = ImageIO.read(new File(PATH+"GroundGravel_Concrete.png"));
			g.drawImage(area,300,400,Sokoban.getImageWidth(),Sokoban.getImageHeight(), drawing);
		} catch (IOException e) {
			// TODO Auto-generated catch block
			e.printStackTrace();
		}
	}
}
